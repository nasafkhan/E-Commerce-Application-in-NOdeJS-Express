<section>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <h3 class="text-center">Edit Product</h3>
                <form action="/admin/edit_product{{product._id}}" method="POST" enctype="multipart/form-data">
                    <label for="">Title</label>
                    <input type="text" name="title" value="{{product.title}}" class="form-control">

                    <label for="">Price</label>
                    <input type="text" name="price" value="{{product.price}}" class="form-control">

                    <label for="">Descripton</label>
                    <input type="text" name="description" value="{{product.description}}" class="form-control">

                    <label for=""></label>
                    <img src="/product_images/{{product._id}}.jpg" id="imageView" class="pt-3" alt="" style="width: 100px; height: auto;">
                    <input type="file" name="image" onchange="viewImage(event)" class="form-control">

                    <button type="submit" class="btn btn-success mt-2">submit</button>
                </form>
            </div>
        </div>
    </div>
    </div>
</section>


<script>
    function viewImage(event){
        document.getElementById('imageView').src=URL.createObjectURL(event.target.files[0])
    }
</script>